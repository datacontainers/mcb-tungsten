        <image>
            <name>CentOS7-Hadoop-Base</name>
            <type>qcow2</type>
            <os>Linux</os>
            <firstboot_script>ambari_ready.sh</firstboot_script>
        </image>
        <vdisk_set>
            <name></name>
            <vdisk_template>hadoop_vdisks</vdisk_template>
        </vdisk_set>
    </apphost_template>
    <apphost_group>
        <name>ambari</name>
        <count>1</count>
        <virtual_rack>1</virtual_rack>
        <apphost_template>Hadoop_Ambari_Node</apphost_template>
