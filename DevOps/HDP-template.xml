    <last_modified_by/>
    <last_modified/>
    <data_protection_policy>
        <name>4+1_32k</name>
        <server>
            <erasure_coding>
                <data>4</data>
                <erasure>1</erasure>
                <stripe>32</stripe>
            </erasure_coding>
        </server>
    </data_protection_policy>
    <data_protection>4+1_32k</data_protection>
