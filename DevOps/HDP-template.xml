            <name>CentOS7-Ambari-2.4.1.0-Base</name>
            <type>qcow2</type>
            <os>Linux</os>
            <firstboot_script>ambari_ready.sh</firstboot_script>
        </image>
        <vdisk_set>
            <name></name>
            <vdisk_template>hadoop_vdisks</vdisk_template>
        </vdisk_set>
    </apphost_template>
    <apphost_template>
        <name>Hadoop_Node</name>
        <type>kvm</type>
	    <vcpu>8</vcpu>
	    <memory>16</memory>
